@model OperationViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Add Operation</h1>

<hr />
    <div class="w-25">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account" class="control-label"></label>
                <input asp-for="Account" class="form-control" />
                <span asp-validation-for="Account" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AmountARS" class="control-label"></label>
                <input id="AmountARS" asp-for="AmountARS" class="form-control" value="0" />
                <span asp-validation-for="AmountARS" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="AmountUSD" class="control-label"></label>
                <input id="AmountUSD" asp-for="AmountUSD" class="form-control" value="0" />
                <span asp-validation-for="AmountUSD" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Create" class="btn bg-indigo text-white" />
            </div>
        </form>
    </div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
        $("#AmountARS").on("change", function () {
            $("#AmountUSD").val(0);
        });

        $("#AmountUSD").on("change", function () {
            $("#AmountARS").val(0);
        });
    </script>
}