@model OperationViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="w-100">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="Id" hidden />
        <div class="form-group">
            <label asp-for="Type" class="control-label"></label>
            <input asp-for="Type" class="form-control form-control-sm" />
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Account" class="control-label"></label>
            <input asp-for="Account" class="form-control form-control-sm" />
            <span asp-validation-for="Account" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control form-control-sm" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AmountARS" class="control-label"></label>
            <input asp-for="AmountARS" id="EditAmountARS" class="form-control form-control-sm" />
            <span asp-validation-for="AmountARS" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="AmountUSD" class="control-label"></label>
            <input asp-for="AmountUSD" id="EditAmountUSD" class="form-control form-control-sm"/>
            <span asp-validation-for="AmountUSD" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <input type="submit" value="Save" class="btn bg-indigo text-white" />
        </div>
    </form>
    <a asp-action="Index">Go back</a>
</div>