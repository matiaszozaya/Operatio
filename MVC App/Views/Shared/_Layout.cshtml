@{
    var dollarBuy = ViewBag.DollarValueBuy;
    var dollarSell = ViewBag.DollarValueSell;
    var lastUpdate = ViewBag.LastUpdate;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Operatio | Argentinian Dollar Blue Price</title>
    <link rel="icon" href="/assets/img/bolsa-de-dinero-40.png" type="image/x-icon" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:opsz,wght@6..12,200;6..12,300;6..12,400;6..12,500;6..12,600;6..12,700;6..12,800;6..12,900;6..12,1000&family=Open+Sans:wght@300;400;500;600;700;800&family=Oswald:wght@200;300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <div class="bg-white text-dark d-flex align-items-center justify-content-center p-2">
            <span class="fw-bold text-muted" style="font-size: 75%">Dollar Blue Price (AR$)</span>
                <div class="vr mx-2"></div>
                <span class="badge bg-danger fw-bold me-1">Buy - AR$ @dollarBuy</span>
                <span class="badge bg-success fw-bold me-1">Sell - AR$ @dollarSell</span>
                <div class="vr mx-2"></div>
            <span class="text-muted" style="font-size: 75%"><strong>Last Update:</strong> @lastUpdate</span>
        </div>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-indigo border-bottom border-secondary mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <h2 class="fw-bold m-0">Øperatio</h2>
                </a>
                <div class="d-flex align-items-center justify-content-between">
                    <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    <a class="nav-link text-white" asp-area="" asp-controller="Operation" asp-action="Index">Operations</a>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="d-flex flex-column align-items-center justify-content-start">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top border-secondary bg-dark footer">
        <div class="container d-flex align-items-center justify-content-center p-3">
            <span class="text-white">&copy; @DateTime.Today.Year - Operatio.com.ar | Developed by Matías Zozaya</span>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
